@model TestProject02.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input type="text" class="form-control" asp-for="Username" required/>
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div id="email-div" class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" required />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" required>
    </div>
    <input id="submit-register" type="submit" value="Register" class="btn btn-primary" />
</form>
